generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
id Int @id @default(autoincrement())
name String @unique
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  fullName String
  password String
  role String @default("USER")
  allergyIds Int[]
  ingredientIds Int[]
}

model Allergy{
  id Int @id @default(autoincrement())
  name String @unique
}

model Ingredient{
  id Int @id @default(autoincrement())
  name String @unique
}

model PendingIng {
  id Int @id @default(autoincrement())
  name String @unique
}
